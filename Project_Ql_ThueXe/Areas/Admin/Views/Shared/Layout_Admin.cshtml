@using Project_Ql_ThueXe.Models;
@{
    NGUOIDUNG nGUOIDUNG = (NGUOIDUNG)Session["Admin"];
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!--Bổ sung CSS cho View Login-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <script src="https://kit.fontawesome.com/212f66a26a.js" crossorigin="anonymous"></script>
    <!--Bổ sung CSS cho View Header_admin-->
    <link href="~/Areas/Admin/Css/Header_Admin_Css.css" rel="stylesheet" />
    <style>
        .body-admin {
            margin-right: 7px;
            margin-left: 170px;
            overflow: hidden;
            min-height: 600px;
            max-height: 1000px;
            border: 2px solid black;
            border-radius: 5px;
        }

        nav {
            padding-top: 10px;
            float: left;
            max-width: 300px;
            margin-left: 7px;
            background-color: #E4F2F2;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <header>
        @Html.Action("Header_Admin", "Admin", new { area = "Admin" })
    </header>
    <nav>
        @Html.Action("Menu_Admin", "Admin", new { area = "Admin" })
    </nav>
    <div class="body-admin">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
