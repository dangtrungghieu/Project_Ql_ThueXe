
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<!--Bổ sung CSS cho View Login-->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<script src="https://kit.fontawesome.com/212f66a26a.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/Areas/Admin/Css/DangNhap_Style.css" />
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12 login-key">
                <i class="fa fa-key" aria-hidden="true"></i>
            </div>
            <div class="col-lg-12 login-title">
                ADMIN <div class="logo-panel">DHGo </div>
            </div>
            <div class="col-lg-12 login-form">
                <div class="col-lg-12 login-form">
                    <form action="DangNhap" method="post">
                        <div class="form-group">
                            <label class="form-control-label">TÊN ĐĂNG NHẬP</label>
                            <input name="Username" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">MẬT KHẨU</label>
                            <input name="Password" type="password" class="form-control">
                        </div>
                        <div class="col-lg-12 loginbttm">
                            <div class="login-btm login-text" style="color:red;font-weight:bold">
                                @ViewBag.ThongBao
                            </div>
                            <br />
                            <div class="login-btm login-button">
                                <button type="submit" class="btn btn-outline-primary" style="border-radius: 10px;margin-left:450px; width:120px">Đăng nhập</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-3 col-md-2"></div>
        </div>
    </div>
</div>

