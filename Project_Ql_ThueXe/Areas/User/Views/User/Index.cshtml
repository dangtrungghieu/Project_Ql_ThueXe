@using Project_Ql_ThueXe.Models;
@{
    NGUOIDUNG nGUOIDUNG = (NGUOIDUNG)Session["TaiKhoan"];
}

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/LayoutUser.cshtml";
}

<div class="row" style="padding-top: 30px">
    <div class="col-md-12">
        <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">
            <form action="QuanLy/Index" method="post">
                <table class="table manage-candidates-top mb-0">
                    <thead>
                        <tr>
                            <th class="text-center">Họ và tên</th>
                            <th class="text-center">Giới tính</th>
                            <th class="text-center">Email</th>
                            <th class="text-center">Địa chỉ</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="candidates-list">
                            <td class="text-center">
                                <label class="form-control">@nGUOIDUNG.TenNguoiDung</label>
                            </td>
                            <td class="text-center">
                                <label class="form-control">@nGUOIDUNG.GioiTinh</label>
                            </td>
                            <td class="text-center">
                                <label class="form-control">@nGUOIDUNG.Email</label>
                            </td>
                            <td class="text-center">
                                <label class="form-control">@nGUOIDUNG.DiaChi</label>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center mt-4">
                    <a href="@Url.Action("QuanLyThongTin", "User")" class="btn btn-primary">Chỉnh Sửa Thông Tin</a>
                    <a style="margin-left: 40px"  href="@Url.Action("DoiMatKhau", "User")" class="btn btn-primary">Đổi Mật Khẩu</a>
                </div>
            </form>
        </div>
    </div>
</div>
