
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>@ViewBag.Title</title>
    <style>
        .card {
            width: 100%;
        }

        .card-img-top {
            width: 100%;
            height: 200px; /* Đặt chiều cao mong muốn */
            object-fit: cover; /* Đảm bảo hình ảnh không bị méo */
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="@Url.Action("Home", "Home")">
                <img src="~/Images/logoOOD.png" alt="Logo" class="img-fluid" style="max-height: 130px;margin-left: 120px">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item me-5">
                        <a class="nav-link fs-5" href="@Url.Action("HuongDan", "Home")"><strong>Hướng dẫn sử dụng</strong></a>
                    </li>
                    <li class="nav-item me-5">
                        <a class="nav-link fs-5" href="@Url.Action("BangGia", "Home")"><strong>Bảng giá</strong></a>
                    </li>
                    <li class="nav-item dropdown me-5">
                    <li class="nav-item dropdown me-5">
                        <a class="nav-link fs-5" href="@Url.Action("DiaChiTram", "Home")"><strong>Danh sách trạm</strong></a>
                    </li>
                    </li>
                    <li class="nav-item dropdown me-5">
                        <a class="nav-link dropdown-toggle fs-5" href="#" role="button" data-bs-toggle="dropdown" data-bs-target="#navbarDropdownMenuLink2">
                            <strong>Liên hệ</strong>
                        </a>
                        <div style="text-align:center" class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink2">
                            <a href="https://facebook.com" class="text-dark ml-2 dropdown-item"><i class="fab fa-facebook fa-2x" style="margin-right:20px"></i></a>
                            <a href="https://twitter.com" class="text-dark ml-2 dropdown-item"><i class="fab fa-twitter fa-2x" style="margin-right:20px"></i></a>
                            <a href="https://www.instagram.com/" class="text-dark ml-2 dropdown-item"><i class="fab fa-instagram fa-2x" style="margin-right:20px"></i></a>
                            <a href="https://youtube.com" class="text-dark ml-2 dropdown-item"><i class="fab fa-youtube fa-2x" style="margin-right:20px"></i></a>
                        </div>
                    </li>

                </ul>
            </div>
        </nav>

        <div class="col-12" style="background-color: #aaddd0">
            @RenderBody()
        </div>
    </div>

    <footer class="mt-5">
        <div class="container bg-light p-4 rounded" style="font-size: 18px;">
            <div class="row">
                <div class="col-md-6 text-center">
                    <p class="mb-0"><strong style="font-size: 22px;">Giờ mở cửa:</strong></p>
                    <p class="mb-0" style="font-size: 20px;">7:00 - 21:00 (Mon - Sun)</p>
                </div>
                <div class="col-md-6 text-center">
                    <p class="mb-0"><strong style="font-size: 22px;">Liên hệ với chúng tôi:</strong></p>
                    <p class="mb-0" style="font-size: 20px;">07984564654</p>
                </div>
            </div>

            <hr class="my-4">

            <div class="text-center">
                <div class="social-icons">
                    <a href="#" class="text-dark" style="font-size: 24px;margin-right: 20px"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="text-dark" style="font-size: 24px;margin-right: 20px"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-dark" style="font-size: 24px;margin-right: 20px"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-dark" style="font-size: 24px;"><i class="fab fa-youtube"></i></a>
                </div>
                <p style="font-size: 20px;">DHGo - An toàn - Sức khỏe</p>
                <p style="font-size: 20px;">© 2024 - @@@@@@</p>
            </div>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
