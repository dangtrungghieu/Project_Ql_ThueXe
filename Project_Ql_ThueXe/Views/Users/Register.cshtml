@{ 
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/LayoutUser.cshtml"; 
    }

<style>
    .custom-form {
        width: 60%;
    }
    .custom-col {
        width: calc(50% + 100px); 
    }
    .custom-col div {
        width: 100%;
    }
</style>

@using (Html.BeginForm())
{
<div class="container" style="padding-bottom: 100px; padding-top: 30px">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h6 style="text-align:center">
                <strong>
                    CHÀO MỪNG BẠN ĐẾN VỚI<span style="background-color: #96db56; border-radius: 7px; padding: 1px;">DHGo</span>
                </strong>

            </h6>
            <div class="card" style="margin-top: 30px; width:100%">
                <div class="card-body">

                    <h2 class="card-title text-center mb-4">Đăng Ký</h2>
                    <div class="text-center" style="color:red; text-align:center; font-weight:bold">@ViewBag.ThongBao</div>
                    <form class="mx-auto" style="width: 60%;">
                        <div class="row">
                            <div class="col custom-col">
                                <div style="margin-left: 50px;" class="mb-3">
                                    <label for="hovaten" class="form-label">Họ và tên</label>
                                    <input value="@ViewBag.sTen" style="width: 75%" name="sTen" type="text" class="form-control" id="username" placeholder="Nhập họ và tên" required>
                                </div>
                            </div>
                            <div class="col custom-col">
                                <div style="margin-left: 20px;" class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input value="@ViewBag.sEmail" style="width: 75%" name="sEmail" type="text" class="form-control" id="username" placeholder="Nhập email" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col custom-col">
                                <div style="margin-left: 50px;" class="mb-3">
                                    <label for="ngaysinh" class="form-label">Ngày sinh</label>
                                    <input value="@Convert.ToDateTime(ViewBag.sNgaySinh)" style="width: 75%" name="sNgaySinh" type="date" class="form-control" id="username" placeholder="Nhập tên đăng nhập" required>
                                </div>
                            </div>
                            <div class="col custom-col">
                                <div style="margin-left: 20px;" class="mb-3">
                                    <label for="diachi" class="form-label">Địa chỉ</label>
                                    <input value="@ViewBag.sDiaChi" style="width: 75%" name="sDiaChi" type="text" class="form-control" id="username" placeholder="Nhập địa chỉ" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col custom-col">
                                <div style="margin-left: 50px;" class="mb-3">
                                    <label for="gioitinh" class="form-label">Giới tính</label>
                                    <select style="width: 75%" name="sGioiTinh" class="form-control" id="gioitinh" required>
                                        <option value="" disabled selected>Chọn giới tính</option>
                                        <option value="Nam">Nam</option>
                                        <option value="Nữ">Nữ</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col custom-col">
                                <div style="margin-left: 20px;" class="mb-3">
                                    <label for="username" class="form-label">Tên đăng nhập</label>
                                    <input value="@ViewBag.sTenDN" style="width: 75%" name="sTenDN" type="text" class="form-control" id="username" placeholder="Nhập tên đăng nhập" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col custom-col">
                                <div style="margin-left: 50px;" class="mb-3">
                                    <label for="password" class="form-label">Mật khẩu</label>
                                    <input value="@ViewBag.sMatKhau" style="width: 75%" name="sMatKhau" type="password" class="form-control custom-form" id="password" placeholder="Nhập mật khẩu" required>
                                </div>
                            </div>
                            <div class="col custom-col">
                                <div style="margin-left: 20px;" class="mb-3">
                                    <label for="confirm-password" class="form-label">Xác nhận mật khẩu</label>
                                    <input value="@ViewBag.sMatKhauNL" style="width: 75%" name="sXacNhanMatKhau" type="password" class="form-control custom-form" id="confirm-password" placeholder="Xác nhận mật khẩu" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col custom-col">
                                <div class="d-grid mb-3 mx-auto">
                                    <button type="submit" class="btn btn-primary custom-form" style="margin-top:20px; margin-left:120px">Đăng Ký</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        Đã có tài khoản? <a href="@Url.Action("Login", "Users")" class="text-decoration-none">Đăng nhập ngay</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>}